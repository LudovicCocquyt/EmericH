{# galerie #}
<div id="galery" style="height: 60em; margin-top; padding-top: 2em;
    margin-top: -2em; margin-bottom: 4em;">
	<div class="row" style="justify-content: center;">

		<!-- Button trigger modal 1 -->
		<button style="width: 30em; height: 27em;" type="button" class="btn mt-4 m-3" data-toggle="modal" data-target="#intérieures">
			<h3>Rénovations intérieures<h3>
		    <img style="width: 100%; max-height: 9em;" src="/img/interieur.jpg">
		</button>

		<!-- Button trigger modal 2 -->
		<button style="width: 30em; height: 27em;" type="button" class="btn mt-4 m-3" data-toggle="modal" data-target="#terrassements">
			<h3> Terrassement, fondation, nivelage...<h3>
		    <img style="width: 100%; max-height: 9em;" src="/img/terrassement.jpg">
		</button>

		<!-- Button trigger modal 3 -->
		<button style="width: 30em; height: 27em;" type="button" class="btn mt-4 m-3" data-toggle="modal" data-target="#sol">
			<h3>Sol (carrelage, pavage, chape...)<h3>
		    <img style="width: 100%; max-height: 9em;" src="/img/sol.jpg">
		</button>

		<!-- Button trigger modal 4 -->
		<button style="width: 30em; height: 25em;" type="button" class="btn mt-4 m-3" data-toggle="modal" data-target="#maconnerie">
		    <h3>Maçonnerie<h3>
		    <img style="width: 100%; max-height: 9em;" src="/img/maconnerie.png">
		</button>

		<!-- Button trigger modal 5 -->
		<button style="width: 30em; height: 25em;" type="button" class="btn mt-4 m-3" data-toggle="modal" data-target="#cloture">
			<h3>Clôture brise vue<h3>
		    <img style="width: 100%; height: 9em;" src="/img/cloture.jpg">
		</button>

		<!-- Button trigger modal 6 -->
		<button style="width: 30em; height: 25em;" type="button" class="btn mt-4 m-3" data-toggle="modal" data-target="#divers">
			<h3>Réalisations diverses<h3>
		    <img style="width: 100%; max-height: 9em;" src="/img/deco.jpg">
		</button>

	</div>
</div>

