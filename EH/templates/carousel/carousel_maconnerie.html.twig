<!-- Modal & carousel maconnerie -->
<div class="modal fade" id="maconnerie" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel3" aria-hidden="true">
    <div class="modal-dialog" role="document">
	    <div class="modal-content" style="width: 50em; height: 32em;">
	      
	        <div class="modal-header">
		        <h5 class="modal-title" id="exampleModalLabel3">Ma√ßonnerie</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          	<span aria-hidden="true">&times;</span>
	        	</button>
			</div>
	        <div class="modal-body">

				<!--Carousel Maconnerie-->
				<div id="multi-item-example4" class="carousel slide carousel-multi-item carousel-multi-item-2" data-ride="carousel">

					<!--Controls-->
					<div class="controls-top" style="text-align: center;">
					    <a class="black-text" href="#multi-item-example4" data-slide="prev"><i class="fas fa-angle-left fa-3x pr-3"></i></a>
					    <a class="black-text" href="#multi-item-example4" data-slide="next"><i class="fas fa-angle-right fa-3x pl-3"></i></a>
					</div>
					<!--/.Controls-->

				    <!--Slides-->
				    <div class="carousel-inner" role="listbox">
				  	    <div class="carousel-item active">
						    <div class="col-md-3 mb-3">
						        <div class="card">
						            <img class="" style="width: 33em; height: auto;" src="img/logoban_1.png"
						            alt="Card image cap">
						        </div>
						    </div>
					    </div>
						
						{% for maconnerie in maconneries %}
					    <div class="carousel-item">
						      <div class="col-md-3 mb-3">
						        <div class="card">
						          <img class="" style="width: 33em; height: auto;" src="uploads/{{ maconnerie.images.toArray.0.name }}"
						            alt="Card image cap">
						        </div>
						      </div>
					    </div>
				    	{% endfor %}
				    </div>
				</div>
	        </div>
	    </div>
    </div>
</div>

