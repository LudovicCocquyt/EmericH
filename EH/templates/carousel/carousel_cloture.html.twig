<!-- Modal & carousel cloture-->
<div class="modal fade" id="cloture" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel10" aria-hidden="true">
    <div class="modal-dialog" role="document">
	    <div class="modal-content heightModal">
	      
	        <div class="modal-header">
		        <h5 class="modal-title smallFont" id="exampleModalLabel10">Clot√ªre et brise vue</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          	<span aria-hidden="true">&times;</span>
	        	</button>
			</div>
	        <div class="modal-body">

				<!--Carousel cloture -->
				<div id="multi-item-example3" class="carousel slide carousel-multi-item carousel-multi-item-2" data-ride="carousel">

					<!--Controls-->
					<div class="controls-top text-center">
					    <a class="black-text" href="#multi-item-example3" data-slide="prev"><i class="fas fa-angle-left fa-3x pr-3"></i></a>
					    <a class="black-text" href="#multi-item-example3" data-slide="next"><i class="fas fa-angle-right fa-3x pl-3"></i></a>
					</div>
					<!--/.Controls-->

				    <!--Slides-->
				    <div class="carousel-inner" role="listbox">
				  	    <div class="carousel-item active">
						    <div class="col-md-3 mb-3">
						        <div class="card hCard">
						        	{% for cloture in clotures|reverse|slice(0, 1) %}

						        		{% if cloture.format == 'Paysage'%}
							          		<img class="imgPaysage" src="uploads/{{ cloture.images.toArray.0.name }}" alt="Card image cap">
							        		<p class="text-center">{{ cloture.description }}</p>
							          	{% endif %}
							          	{% if cloture.format == 'Portrait'%}
							          		<img class="imgPortrait" src="uploads/{{ cloture.images.toArray.0.name }}" alt="Card image cap">
							          		<p class="text-center">{{ cloture.description }}</p>
							          	{% endif %}

						            {% endfor %}
						        </div>
						    </div>
					    </div>
						{% for cloture in clotures|reverse|slice(1) %}
							{% if cloture.images.toArray.0.name is defined %}
						    <div class="carousel-item">
							      <div class="col-md-3 mb-3">
							        <div class="card hCard">
							        	
							        	{% if cloture.format == 'Paysage'%}
							          		<img class="imgPaysage" src="uploads/{{ cloture.images.toArray.0.name }}" alt="Card image cap">
							        		<p class="text-center">{{ cloture.description }}</p>
							          	{% endif %}
							          	{% if cloture.format == 'Portrait'%}
							          		<img class="imgPortrait" src="uploads/{{ cloture.images.toArray.0.name }}" alt="Card image cap">
							          		<p class="text-center">{{ cloture.description }}</p>
							          	{% endif %}
							        
							        </div>
							      </div>
						    </div>
							{% endif %}
				    	{% endfor %}
				    </div>
				</div>
	        </div>
	    </div>
    </div>
</div>

